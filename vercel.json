{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/*.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": "api/data.json"
      }
    }
  ],
  "rewrites": [
    { "source": "/((?!api/).*)", "destination": "/public/$1" }
  ]
}
